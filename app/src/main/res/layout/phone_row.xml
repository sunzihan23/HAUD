<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/incoming_call_cv"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/is_missed_call_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/incoming_call_sid_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:text="Call SID"
            android:textAllCaps="true"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/incoming_call_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="34dp"
            android:text="5 minutes"
            android:textColor="#838383"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/incoming_call_sim_iv"
            android:layout_width="22dp"
            android:layout_height="29dp"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_sim_card" />

        <TextView
            android:id="@+id/incoming_call_sim_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_marginRight="22.5dp"
            android:layout_marginTop="13dp"
            android:textSize="10dp"/>

        <ImageView
            android:id="@+id/incoming_call_uploaded_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_ticks"
            android:layout_marginRight="18dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:id="@+id/incoming_call_recording_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_mic"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="43dp"
            android:layout_marginBottom="5dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#E5E5E5"
            android:layout_gravity="bottom"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>